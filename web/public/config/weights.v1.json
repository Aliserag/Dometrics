{
  "version": "v1",
  "description": "Dometrics scoring weights - client-side configuration for transparent, tweakable analytics",
  "lastUpdated": "2025-01-01T00:00:00Z",
  
  "riskScore": {
    "description": "Higher score = higher risk (0-100 scale)",
    "weights": {
      "expiryBuffer": {
        "weight": 0.35,
        "description": "Days until expiration with granular tiers",
        "tiers": {
          "critical": { "days": 14, "risk": 100 },
          "urgent": { "days": 30, "risk": 85 },
          "warning": { "days": 60, "risk": 65 },
          "moderate": { "days": 90, "risk": 45 },
          "stable": { "days": 180, "risk": 25 },
          "safe": { "days": 365, "risk": 10 },
          "veryLow": { "days": 730, "risk": 0 }
        }
      },
      "lockStatus": {
        "weight": 0.15,
        "description": "Transfer lock status (locked = LOWER risk, more stable)",
        "adjustments": {
          "locked": -15,
          "unlocked": 15
        }
      },
      "ownershipStability": {
        "weight": 0.20,
        "description": "Domain age and ownership patterns",
        "factors": {
          "domainAge": {
            "weight": 0.6,
            "tiers": {
              "new": { "days": 30, "risk": 20 },
              "young": { "days": 90, "risk": 10 },
              "established": { "days": 365, "risk": 0 },
              "mature": { "days": 730, "risk": -10 }
            }
          },
          "renewalRate": {
            "weight": 0.4,
            "calculation": "renewals per year",
            "tiers": {
              "never": { "count": 0, "risk": 15 },
              "rare": { "count": 1, "risk": 5 },
              "normal": { "count": 2, "risk": 0 },
              "frequent": { "count": 3, "risk": -5 }
            }
          }
        }
      },
      "marketActivity": {
        "weight": 0.20,
        "description": "Trading activity indicates demand/liquidity",
        "factors": {
          "offerActivity": {
            "weight": 0.6,
            "tiers": {
              "none": { "offers": 0, "risk": 10 },
              "low": { "offers": 1, "risk": 5 },
              "moderate": { "offers": 3, "risk": 0 },
              "high": { "offers": 5, "risk": -5 },
              "veryHigh": { "offers": 10, "risk": -10 }
            }
          },
          "activityRecency": {
            "weight": 0.4,
            "description": "Days since last activity (trade/transfer/listing)",
            "tiers": {
              "stale": { "days": 180, "risk": 15 },
              "quiet": { "days": 90, "risk": 10 },
              "moderate": { "days": 30, "risk": 5 },
              "active": { "days": 7, "risk": 0 },
              "hot": { "days": 1, "risk": -5 }
            }
          }
        }
      },
      "registrarTrust": {
        "weight": 0.10,
        "description": "IANA registrar reputation",
        "tiers": {
          "verified": 0,
          "known": 5,
          "unknown": 15,
          "suspicious": 30
        }
      }
    }
  },

  "rarityScore": {
    "description": "Higher score = rarer domain (0-100 scale)",
    "weights": {
      "nameLength": {
        "weight": 0.40,
        "description": "Character count (≤4 chars = 100 rarity, ≥12 = 0)",
        "curve": "linear",
        "thresholds": {
          "maxRarity": 4,
          "minRarity": 12
        }
      },
      "dictionaryBrandable": {
        "weight": 0.25,
        "description": "Dictionary word or brandable pattern detection",
        "bonuses": {
          "dictionary": 25,
          "brandable": 15,
          "random": 0
        }
      },
      "tldScarcity": {
        "weight": 0.25,
        "description": "TLD rarity bucket based on supply/demand",
        "buckets": {
          "ultra": 25,
          "rare": 20,
          "common": 10,
          "abundant": 0
        }
      },
      "historicDemand": {
        "weight": 0.10,
        "description": "Unique wallets making offers in 90d",
        "scaling": "logarithmic",
        "baseValue": 10
      }
    }
  },

  "momentumScore": {
    "description": "Higher score = more momentum/activity (0-100 scale)",
    "weights": {
      "activityDelta": {
        "weight": 0.70,
        "description": "7d vs 30d offers/listings delta",
        "calculation": "percentage_change",
        "periods": {
          "recent": 7,
          "baseline": 30
        }
      },
      "recentEvents": {
        "weight": 0.30,
        "description": "Recent transfer/listing events (72h window)",
        "timeWindow": 72,
        "eventTypes": ["TRANSFERRED", "LISTED", "OFFER_RECEIVED"],
        "decayFactor": 0.8
      }
    }
  },

  "forecastScore": {
    "description": "6-month value prediction with confidence intervals",
    "method": "linear_blend",
    "formula": "base * (1 + 0.5*momentum_norm + 0.3*rarity_norm - 0.4*risk_norm)",
    "weights": {
      "momentum": 0.5,
      "rarity": 0.3,
      "risk": -0.4
    },
    "confidenceInterval": {
      "base": 0.10,
      "riskMultiplier": 0.10,
      "formula": "±(10% + risk_normalized * 10%)"
    },
    "normalization": {
      "description": "All input scores scaled 0-1 for blending",
      "method": "min_max_scaling"
    }
  },

  "explainability": {
    "description": "Configuration for score explanation features",
    "topFactors": 3,
    "tooltips": {
      "risk": "Shows top 3 factors contributing to risk assessment",
      "rarity": "Explains what makes this domain rare or common",
      "momentum": "Describes recent activity trends and changes",
      "forecast": "Breaks down prediction methodology and drivers"
    }
  },

  "thresholds": {
    "description": "Alert and categorization thresholds",
    "risk": {
      "low": 25,
      "medium": 50,
      "high": 75
    },
    "rarity": {
      "common": 25,
      "uncommon": 50,
      "rare": 75,
      "ultra": 90
    },
    "momentum": {
      "cold": 20,
      "warm": 40,
      "hot": 60,
      "blazing": 80
    }
  }
}